pipeline {
  agent {
    kubernetes {
      yaml """
        apiVersion: v1
        kind: Pod
        metadata:
          labels:
            agent: docker
        spec:
          containers:
          - name: docker
            image: docker:latest
            command:
            - cat
            tty: true
          - name: buildkit
            image: moby/buildkit:v0.8.1
            env:
            - name: BUILDKIT_HOST
              value: tcp://buildkitd:1234
            command:
            - cat
            tty: true
          volumes:
          - name: docker-socket
            hostPath:
              path: /var/run/docker.sock
          - name: buildkitd
            emptyDir: {}
      """
    }
  }
  stages {
    stage('cleanup') {
      steps {
        sh 'docker system prune --all --volumes --force'
      }
    }
    stage('build') {
      steps {
        sh 'time docker build -t darinpope/my-app:0.0.1 -f Dockerfile-first .'
      }
    }
    stage('images') {
      steps {
        sh 'docker images'
      }
    }
    stage('build again') {
      steps {
        sh 'time docker build -t darinpope/my-app:0.0.2  -f Dockerfile-second .'
      }
    }
    stage('images again') {
      steps {
        sh 'docker images'
      }
    }
  }
}
